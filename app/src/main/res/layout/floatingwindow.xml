<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cardContainer"
        android:layout_width="208dp"
        android:layout_height="181dp"
        android:layout_centerInParent="true"
        app:cardBackgroundColor="@color/primarioCel"
        app:cardCornerRadius="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/btnC"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:layout_constraintBottom_toTopOf="@+id/edt_description2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/closecardmem" />

            <TextView
                android:id="@+id/edt_description2"
                android:layout_width="171dp"
                android:layout_height="51dp"
                android:background="@drawable/edt_description"
                android:fontFamily="@font/viga_regular"
                android:padding="10dp"


                android:scrollbars="vertical"


                android:textAlignment="gravity"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/edt_description"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.83" />

            <EditText
                android:id="@+id/edt_description"
                android:layout_width="171dp"
                android:layout_height="48dp"
                android:background="@drawable/edt_description"

                android:fontFamily="@font/viga_regular"
                android:padding="10dp"
                app:layout_constraintBottom_toTopOf="@+id/btnMax"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.95"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageView
                android:id="@+id/btnMax"
                android:layout_width="34dp"
                android:layout_height="36dp"
                app:srcCompat="@drawable/send"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.503"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>